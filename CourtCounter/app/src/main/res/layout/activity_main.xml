<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/player1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="120sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerOnePlusOne"
                    android:text="@string/plusOne" />

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerOnePlusTwo"
                    android:text="@string/plusTwo" />

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerOnePlusThree"
                    android:text="@string/plusThree" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/player2"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="120sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerTwoPlusOne"
                    android:text="@string/plusOne" />

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerTwoPlusTwo"
                    android:text="@string/plusTwo" />

                <Button
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:onClick="playerTwoPlusThree"
                    android:text="@string/plusThree" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="reset"
        android:text="@string/reset" />
</LinearLayout>